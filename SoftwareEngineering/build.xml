<project name="jeantessier.com" default="all" basedir=".">

    <description>
        Jean's Software-Related Blogs
    </description>

    <target name="all" depends="books, journal"
            description="Generates all dynamic content and Atom feeds."/>

    <target name="books" depends="books.html, books.atom, booksbacklog.html"
            description="Generate the Recent Readings pages (for local debugging)."/>

    <target name="books.html">
        <exec executable="perl"
              output="Books.html">
            <arg value="Books.cgi"/>
        </exec>
    </target>

    <target name="books.atom">
        <exec executable="perl"
              output="Books.atom">
            <arg value="Books_atom.cgi"/>
        </exec>
    </target>

    <target name="booksbacklog.html">
        <exec executable="perl"
              output="BooksBackLog.html">
            <arg value="BooksBackLog.cgi"/>
        </exec>
    </target>

    <target name="journal" depends="journal.html, journal.atom"
            description="Generate the Jean's Journal pages (for local debugging)."/>

    <target name="journal.html">
        <exec executable="perl"
              output="Journal.html">
            <arg value="Journal.cgi"/>
        </exec>
    </target>

    <target name="journal.atom">
        <exec executable="perl"
              output="Journal.atom">
            <arg value="Journal_atom.cgi"/>
        </exec>
    </target>

</project>
